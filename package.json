{
    "name": "derw-formatter-vscode",
    "displayName": "derw-formatter-vscode",
    "description": "An automatic formatter extension for Derw",
    "author": "eeue56",
    "version": "0.0.10",
    "publisher": "derw",
    "repository": "https://github.com/derw-lang/derw-formatter-vscode",
    "engines": {
        "vscode": "^1.6.0"
    },
    "categories": [
        "Formatters"
    ],
    "keywords": [
        "derw",
        "formatter",
        "format"
    ],
    "activationEvents": [
        "onLanguage:derw"
    ],
    "sponsor": {
        "url": "https://github.com/sponsors/eeue56"
    },
    "pricing": "Free",
    "icon": "derw_logo.png",
    "main": "./out/main",
    "contributes": {
        "languages": [
            {
                "id": "derw",
                "aliases": [
                    "Derw"
                ],
                "extensions": [
                    "derw"
                ]
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run esbuild-base -- --minify",
        "esbuild-base": "esbuild ./src/extension.ts --bundle --outfile=out/main.js --external:vscode --format=cjs --platform=node",
        "esbuild": "npm run esbuild-base -- --sourcemap",
        "esbuild-watch": "npm run esbuild-base -- --sourcemap --watch",
        "compile": "tsc -b"
    },
    "devDependencies": {
        "@types/node": "^17.0.42",
        "esbuild": "^0.17.8",
        "typescript": "^4.7.3",
        "vscode": "^1.1.37"
    },
    "dependencies": {
        "derw": "^0.0.9-33"
    }
}
